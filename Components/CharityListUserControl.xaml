<UserControl x:Class="MarathonWPF.Components.CharityListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarathonWPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Border BorderThickness="1" BorderBrush="Black">
        <Grid>
            <Image Name="logoImage" Width="100" Height="100" Source="{Binding CharityLogoBit}" HorizontalAlignment="Left"></Image>
            <StackPanel Orientation="Vertical" Margin="100,0,0,0">
                <TextBlock Text="{Binding CharityName}" TextWrapping="Wrap" Margin="5"></TextBlock>
                <TextBlock TextWrapping="Wrap" Text="{Binding CharityDescription}" Margin="5"></TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
